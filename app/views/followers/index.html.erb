<div class="container">
  <div class="row" style="padding-left: 120px; padding-right: 120px">
    <%= render partial: '/dashboard/sidebar' %>
  <div class="col-md-9">
    <%= render partial: '/dashboard/topnav' %>
<% @followers.each do |follower| %>
<div class="row">
  <div class="col-md-1">
<%= image_tag(follower.avatar, size: 50, :style => "border-radius:5px") %>
</div>
<div class="col-md-9">
<h5><%= follower.name %> <small><%= follower.username %></small></h5>
<p style="font-size: 12px;"><span aria-label="Home location" class="vcard-detail pt-1 css-truncate css-truncate-target" itemprop="homeLocation"><svg aria-hidden="true" class="octicon octicon-location" height="16" version="1.1" viewBox="0 0 12 16" width="12"><path fill-rule="evenodd" d="M6 0C2.69 0 0 2.5 0 5.5 0 10.02 6 16 6 16s6-5.98 6-10.5C12 2.5 9.31 0 6 0zm0 14.55C4.14 12.52 1 8.44 1 5.5 1 3.02 3.25 1 6 1c1.34 0 2.61.48 3.56 1.36.92.86 1.44 1.97 1.44 3.14 0 2.94-3.14 7.02-5 9.05zM8 5.5c0 1.11-.89 2-2 2-1.11 0-2-.89-2-2 0-1.11.89-2 2-2 1.11 0 2 .89 2 2z"></path></svg></span>
   <%= follower.location %></p>
 </div>
 <div class="col-md-2">
   <a class="btn btn-default btn-sm" href="#" role="button">Unfollow</a>
 </div>
</div>
<hr>
<% end %>
</div>
</div>
</div>
